@model IEnumerable<ClothStore.Models.Announcement>

@{
    ViewBag.Title = "Index";
}

<div id="home">
    <h1 class="storeTitle">Welcome to OCS!</h1>

    <div id="storeCarousel" class="carousel" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#storeCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#storeCarousel" data-slide-to="1"></li>
        </ol>
        <div class="carousel-inner">
            @foreach (var item in Model)
            {
                <div class="item">
                    <img src="@item.Image" />
                    <div class="carousel-caption">
                        @if (!string.IsNullOrEmpty(@item.Title))
                        {
                            <h2>@item.Title</h2>  
                        }
                        @if (!string.IsNullOrEmpty(@item.Description))
                        {
                            <h4>@item.Description</h4>
                        }
                    </div>
                </div>
            }
        </div>
        <a class="carousel-control left" href="#storeCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
        </a>
        <a class="carousel-control right" href="#storeCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
        </a>
    </div>

    @Html.ActionLink("Go to site", "Index", "Store", new { @class = "enterLink linkBtn badge" })
</div>