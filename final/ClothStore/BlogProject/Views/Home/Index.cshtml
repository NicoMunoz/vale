@{
    ViewBag.Title = "Index";
}

<div id="storeCarousel" class="carousel" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#storeCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#storeCarousel" data-slide-to="1"></li>
    </ol>   
    <div class="carousel-inner">
        <div class="item active">
            <img src="~/Content/Images/banner1.jpg">
            <div class="carousel-caption">
                <h3>Sale!</h3>
                <p>Don't miss this opportunity!</p>
            </div>
        </div>
        <div class="item">
            <img src="~/Content/Images/banner2.jpg">
            <div class="carousel-caption">
                <h3>Winter is coming!</h3>
                <p>The most fashionable clothes for the coming winter</p>
            </div>
        </div>
    </div>
    <a class="carousel-control left" href="#storeCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
    </a>
    <a class="carousel-control right" href="#storeCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
    </a>
</div>

